<div class="page-header" >
  <h1>Product Listing</h1>
<div class="jumbotron">
  <div class="container">
  <% @products.each do |product| %>   
  <div class="row">
     <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= link_to product.ProductName,edit_product_path(product), class: "thumbnail"%>
          <%= product.Price %>
          <%= product.Description %>        
         </div>
        </div>

  </div>
  <div class="backdrop"></div>
  <div class="box"><div class="close"></div>
</div>    
<% end %>
<div class='remoteform'>
  <%= render partial: 'products/form' , locals: {doajax: true}%>
</div>
</div>
</div>
</div>

